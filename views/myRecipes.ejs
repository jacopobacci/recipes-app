<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width,
  initial-scale=1.0"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="static/stylesheets/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1>My Recipes</h1>
      <% recipes.forEach(recipe=>{ %>

      <div class="card" style="width: 18rem" id="recipe-<%= recipe.id %>">
        <div class="card-body">
          <h5 class="card-title"><%= recipe.title %></h5>
          <p class="card-text"><%= recipe.content %></p>
        </div>
        <div class="card-body">
          <p class="card-text"><%= recipe.ingredients %></p>
        </div>
        <div class="card-body">
          <p class="card-text"><%= recipe.rating %></p>
        </div>
      </div>
      <a href="/my-recipes/<%= recipe.id%>/update">Edit Recipe</a>
      <form method="POST" action="/my-recipes/<%= recipe.id%>?_method=DELETE">
        <button class="btn btn-danger shadow-sm">Delete</button>
      </form>

      <% })%>
      <form method="POST" action="/delete-all?_method=DELETE">
        <button class="btn btn-danger shadow-sm">Delete All Recipes</button>

        <!-- <a class="btn btn-danger shadow-sm" id="delete-all" role="button" href="/my-recipes">Delete All Recipes</a> -->
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="static/scripts/clientRecipe.js"></script>
  </body>
</html>
